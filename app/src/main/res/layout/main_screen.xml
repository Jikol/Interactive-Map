<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MainScreen">

    <TextView
        android:id="@+id/mainScreen_header"
        android:layout_width="268dp"
        android:layout_height="103dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/mainScreen_header"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/rusty_gold"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="24dp"
        android:background="@color/rusty_gold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainScreen_header" />

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="410dp"
        android:background="@drawable/mainscreen_wrapper"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.535">

        <android.widget.Button
            android:id="@+id/mainScreen_friendIdButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/mainscreen_button"
            android:fontFamily="@font/montserrat"
            android:forceDarkAllowed="false"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp"
            android:text="SHOW FRIEND"
            android:textAlignment="center"
            android:textColor="@color/rusty_gold"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <android.widget.Button
            android:id="@+id/mainScreen_newUserButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/mainscreen_button"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp"
            android:text="NEW USER"
            android:textAlignment="center"
            android:textColor="@color/rusty_gold"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <android.widget.Button
            android:id="@+id/mainScreen_loginUserButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/mainscreen_button"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp"
            android:text="LOGIN USER"
            android:textAlignment="center"
            android:textColor="@color/rusty_gold"
            android:textSize="23sp"
            android:textStyle="bold"
            app:iconTint="#FFFFFF"
            tools:ignore="RtlCompat" />

        <android.widget.Button
            android:id="@+id/mainScreen_guestMapButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/mainscreen_button"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp"
            android:text="GUEST MAP"
            android:textAlignment="center"
            android:textColor="@color/rusty_gold"
            android:textSize="23sp"
            android:textStyle="bold"
            app:iconTint="#FFFFFF"
            tools:ignore="RtlCompat" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>